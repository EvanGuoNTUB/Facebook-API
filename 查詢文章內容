posts = graph.get_connections(id='me',connection_name='posts')
print("共有",len(posts['data']),"篇文章")
for index,each in enumerate(posts['data']):
  print("#",index+1)
  print('時間:',each['created_time'])
  if 'story' in each:
      print('描述:',each['story'])
  if 'message' in each:
      print('內容:',each['message'])
  print('-'*30)
